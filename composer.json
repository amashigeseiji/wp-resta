{
    "name": "tenjuu99/wp-resta",
    "description": "WordPress REST Api development framework using DI",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Seiji Amashige",
            "email": "tenjuu99@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Wp\\Resta\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\Resta\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.2",
        "papertower/wp-rest-api-psr7": "^0.8.0"
    },
    "require-dev": {
        "szepeviktor/phpstan-wordpress": "^1.3",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^11.1",
        "psr-mock/http-message-implementation": "^1.0",
        "brain/monkey": "^2.7",
        "mockery/mockery": "^1.6",
        "guzzlehttp/guzzle": "^7.10"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:e2e": "./docker/e2e-test.sh",
        "lint": "phpstan analyse --memory-limit=-1"
    }
}
